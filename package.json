  "version": "1.0.0",
  "description": "Maker.js monorepo",
  "main": "index.js",
  "directories": {
    "doc": "docs"
  },
  "devDependencies": {
    "browserify": "^17.0.0",
    "lerna": "^6.0.3",
    "licensify": "^3.1.3",
    "mocha": "^10.0.0",
    "opentype.js": "^1.1.0",
